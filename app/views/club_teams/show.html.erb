<h1 class="page-header">Club school team page</h1>

<section class="card">
  <section class="card-header">
    Info
  </section>
  <ul class="list-group">
    <li class="list-group-item">
      <strong>Name:</strong>
      <%= @club_team.name %>
    </li>
  </ul>
</section>

<section class="card">
  <section class="card-header">
    Players
  </section>
  <ul class="list-group">
    <% @club_team.players.each do |player| %>
      <li class="list-group-item"><%= link_to player.full_name, player_path(player) %></li>
    <% end %>
  </ul>
</section>

<%= link_to 'Edit', edit_club_team_path %>
