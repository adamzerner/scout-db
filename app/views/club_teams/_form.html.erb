<%= form_with model: @club_team do |f| %>
  <section class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </section>
  <section class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </section>
  <section class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </section>
  <section class="card">
    <section class="card-header">
      Coach
    </section>
    <section class="card-body">
      <%= render "shared/coach_manager_form", f: f, coach_or_manager: :coach %>
    </section>
  </section>
  <section class="card">
    <section class="card-header">
      Manager
    </section>
    <section class="card-body">
      <%= render "shared/coach_manager_form", f: f, coach_or_manager: :manager %>
    </section>
  </section>

  <%= f.submit nil, class: "btn btn-primary" %>
<% end %>
