<h1 class="page-header">High school teams</h1>

<p><%= link_to "Create a new high school team", new_high_school_team_path, class: "btn btn-primary" %></p>

<table class="table table-hover">
  <tr>
    <th>High school team</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @high_school_teams.each do |high_school_team| %>
    <tr>
      <td><%= link_to "#{high_school_team.team_name}", high_school_team_path(high_school_team) %></td>
      <td><%= link_to "Edit", edit_high_school_team_path(high_school_team) %></td>
      <td><%= link_to 'Delete', high_school_team_path(high_school_team),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
