<%= form_with model: @field do |f| %>
  <section class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </section>

  <section class="card">
    <section class="card-header">
      Address
    </section>
    <section class="card-body">
      <%= render "shared/address_form", f: f %>
    </section>
  </section>
  <%= f.submit nil, class: "btn btn-primary" %>
<% end %>
