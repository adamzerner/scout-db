<%= form_with model: @player do |f| %>
  <section class="card">
    <section class="card-header">
      Name
    </section>
    <section class="card-body">
      <section class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </section>
      <section class="form-group">
        <%= f.label :middle_name %>
        <%= f.text_field :middle_name, class: "form-control" %>
      </section>
      <section class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </section>
    </section>
  </section>
  <section class="card">
    <section class="card-header">
      Athletic
    </section>
    <section class="card-body">
      <section class="form-group">
        <%= f.label "Height (feet)" %>
        <%= f.number_field :feet_component_of_height, class: "form-control", in: 3..7 %>
      </section>
      <section class="form-group">
        <%= f.label "Height (inches)" %>
        <%= f.number_field :inches_component_of_height, class: "form-control", in: 0..11.5, step: 0.5 %>
      </section>
      <section class="form-group">
        <%= f.label :weight, "Weight (lbs)" %>
        <%= f.number_field :weight, class: "form-control", in: 60..400, step: 5 %>
      </section>
      <section class="form-group">
        <%= f.label :birthday %>
        <%= f.date_field :birthday, class: "form-control" %>
      </section>
      <section class="form-group">
        <%= f.label :high_school_team %>
        <%= f.collection_select(:high_school_team_id, HighSchoolTeam.all, :id, :full_name, {}, class: "form-control") %>
      </section>
      <section class="form-group">
        <%= f.label :club_team %>
        <%= f.collection_select(:club_team_id, ClubTeam.all, :id, :name, {}, class: "form-control") %>
      </section>
    </section>
  </section>

  <section class="card">
    <section class="card-header">
      Academic
    </section>
    <section class="card-body">
      <section class="form-group">
        <%= f.label :gpa, "GPA" %>
        <%= f.number_field :gpa, class: "form-control", in: 0..4, step: 0.05 %>
      </section>
      <section class="form-group">
        <%= f.label :class_year %>
        <%= f.select(:class_year, ['Freshman', 'Sophomore', 'Junior', 'Senior'], {}, class: "form-control") %>
      </section>
      <section class="form-group">
        <%= f.label :intended_major %>
        <%= f.text_field :intended_major, class: "form-control" %>
      </section>
    </section>
  </section>

  <section class="card">
    <section class="card-header">
      Contact
    </section>
    <section class="card-body">
      <section class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </section>
      <section class="form-group">
        <%= f.label :phone_number %>
        <%= f.phone_field :phone_number, class: "form-control" %>
      </section>
      <%= f.fields_for :address do |address_form| %>
        <section class="form-group">
          <%= address_form.label :address_line_one %>
          <%= address_form.text_field :line_one, class: "form-control" %>
        </section>
        <section class="form-group">
          <%= address_form.label :address_line_two %>
          <%= address_form.text_field :line_two, class: "form-control" %>
        </section>
        <section class="form-group">
          <%= address_form.label :city %>
          <%= address_form.text_field :city, class: "form-control" %>
        </section>
        <section class="form-group">
          <%= address_form.label :state %>
          <%= address_form.text_field :state, class: "form-control" %>
        </section>
        <section class="form-group">
          <%= address_form.label :zip %>
          <%= address_form.text_field :zip, class: "form-control" %>
        </section>
      <% end %>
    </section>
  </section>
  <section class="card">
    <section class="card-header">
      Notes
    </section>
    <section class="card-body">
      <%= f.rich_text_area :notes, class: "form-control" %>
    </section>
  </section>


  <section class="form-group">
    <%= f.submit nil, class: "btn btn-primary" %>
  </section>
<% end %>
